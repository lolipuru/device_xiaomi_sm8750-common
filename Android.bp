soong_namespace {
    imports: [
        "hardware/xiaomi",
    ],
}

install_symlink {
    name: "firmware_wlanmdsp.otaupdate_symlink",
    vendor: true,
    installed_location: "firmware/wlanmdsp.otaupdate",
    symlink_target: "/data/vendor/firmware/wlanmdsp.mbn",
}

install_symlink {
    name: "firmware_wlan_mac.bin_symlink",
    vendor: true,
    installed_location: "firmware/wlan/qca_cld/peach_v2/wlan_mac.bin",
    symlink_target: "/mnt/vendor/persist/peach_v2/wlan_mac.bin",
}

install_symlink {
    name: "firmware_WCNSS_qcom_cfg.ini_symlink",
    vendor: true,
    installed_location: "firmware/wlan/qca_cld/peach_v2/WCNSS_qcom_cfg.ini",
    symlink_target: "/vendor/etc/wifi/peach_v2/WCNSS_qcom_cfg.ini",
}

mkdir {
    name: "vendor_modem_firmware_mountpoint",
    dir: "modem_firmware",
    vendor: true,
}

mkdir {
    name: "product_vm-system_mountpoint",
    dir: "vm-system",
    product_specific: true,
}

install_symlink {
    name: "rfs_msm_mpss_readonly_mbnconfig_symlink",
    vendor: true,
    installed_location: "rfs/msm/mpss/readonly/mbnconfig",
    symlink_target: "/data/vendor/mbnconfig",
}

